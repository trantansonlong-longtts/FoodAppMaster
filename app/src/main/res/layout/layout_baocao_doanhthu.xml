<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtTieuDeBaoCao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Báo Cáo Doanh Thu"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/labelNgayBatDau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"

        android:text="Từ ngày:"
        app:layout_constraintEnd_toEndOf="@+id/btnChonNgayBatDau"
        app:layout_constraintStart_toStartOf="@+id/btnChonNgayBatDau"
        app:layout_constraintTop_toBottomOf="@id/txtTieuDeBaoCao" />

    <Button
        android:id="@+id/btnChonNgayBatDau"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Chọn ngày"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelNgayBatDau" />

    <TextView
        android:id="@+id/labelNgayKetThuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Đến ngày:"
        app:layout_constraintEnd_toEndOf="@+id/btnChonNgayKetThuc"
        app:layout_constraintStart_toStartOf="@+id/btnChonNgayKetThuc"
        app:layout_constraintTop_toBottomOf="@+id/txtTieuDeBaoCao" />

    <Button
        android:id="@+id/btnChonNgayKetThuc"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Chọn ngày"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.899"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelNgayKetThuc" />

    <LinearLayout
        android:id="@+id/layoutQuickSelect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnChonNgayKetThuc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnHomNay"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hôm nay"
            android:textSize="18sp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>
        <Button
            android:id="@+id/btnTuanNay"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_weight="1"
            android:text="Tuần này"/>
        <Button
            android:id="@+id/btnThangNay"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tháng này"
            android:textSize="18sp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnXemBaoCao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Xem Báo Cáo"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/layoutQuickSelect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/labelTongDoanhThu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng Doanh Thu:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnXemBaoCao"/>

    <TextView
        android:id="@+id/txtHienThiTongDoanhThu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 ₫"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/labelTongDoanhThu"
        app:layout_constraintTop_toBottomOf="@id/labelTongDoanhThu"/>
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtHienThiTongDoanhThu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDanhSachHoaDon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_baocao_hoadon"/>
</androidx.constraintlayout.widget.ConstraintLayout>